<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.thirdyearproject">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".difficultySelection"
            android:label="@string/title_activity_difficulty_selection"
            android:theme="@style/AppTheme.NoActionBar"></activity>
        <activity
            android:name=".displayQuestion"
            android:label="@string/title_activity_display_question"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".submodulesPage"
            android:label="@string/title_activity_submodules_page"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".modulesPage"
            android:label="@string/title_activity_modules_page"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".informationPage"
            android:label="@string/title_activity_information_page"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.thirdyearproject.MainActivity" />
        </activity>
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>